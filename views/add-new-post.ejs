<%- include('./partials/header.ejs') %>

<div class="posting-form d-flex justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10 m-2">
        <h1 class="text-center mt-4"> Post Article </h1>
        <form action="/post-article" method="POST" enctype="multipart/form-data">
            
            <div class="d-flex flex-column mt-4"> 
                <label>Full Name:</label>
                <input type="text" name="name" id="name" required>

                <label>Email:</label>
                <input type="email" name="email" id="email" required>

                <label>Title:</label>
                <input type="text" name="title" id="title" required>

                <label>Content:</label>
                <textarea name="content" id="content" style="height: 300px;" required></textarea>
            </div>
            

            <div class="mb-4 mt-3 d-flex justify-content-center">
                <div class="mt-2 flex-column">
                    <label for="image">Choose an image</label>
                    <input type="file" id="image" name="image">
                </div>
                <input type="submit" value="Post Article" class="btn btn-warning justify-content-center">
            </div>

            
        </form>

    </div>
</div>

<%- include('./partials/footer.ejs') %>

